				<hr class="mt-5 mb-4"/>
				<div class="d-flex align-items-center justify-content-between social-media-block">
					<img src="{{ asset('build/images/instagram-logo.png') }}" />
					<img src="{{ asset('build/images/facebook-logo.png') }}" />
					<img src="{{ asset('build/images/pinterest-logo.png') }}" />
					<img src="{{ asset('build/images/youtube-logo.png') }}" />
				</div>
				<hr class="my-4"/>

				<div>
					<p class="playfair-italic fs-4">Ma dernière recette</p>
					{% set FirstRecipe = (RecipeList|first) %}
					<img
							src="{{ asset("uploads/imagesRecipe/#{FirstRecipe.image}") }}"
							class="border p-2"
							style="height: 200px; width: 100%; object-fit: cover"
					/>
					<p class="fs-6 fw-100 text-align-justify my-3 clip-out-text">{{FirstRecipe.description}}</p>
					<a href="{{path('recipe_detail', {id: FirstRecipe.id })}}">
						<button class="btn-secondary fw-300 rounded-pill py-2 small mb-5">Voir la recette</button>
					</a>
				</div>
			</div>
			
			<div class="col-md-6 col-9 mb-5">
			{% for Recipe in RecipeList %}
				<div class="border p-2 mb-2">
					<img
							src="{{ asset("uploads/imagesRecipe/#{Recipe.image}") }}"
							style="height: 500px; width: 100%; object-fit: cover"
					/>
				</div>
